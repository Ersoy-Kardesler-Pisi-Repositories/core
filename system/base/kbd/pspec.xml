            <AdditionalFile permission="0644" target="/usr/share/kbd/keymaps/mac/all/mac-fr-ext_new.map.gz">mandriva/mac-fr-ext_new.kmap.gz</AdditionalFile>
        </AdditionalFiles>
    </Package>

